@startuml
state Клиент {
  [*] --> Проверка_Аргументов
  Проверка_Аргументов --> Вывод_ошибки : Неверный аргумент
  Вывод_ошибки -> [*]
  Проверка_Аргументов -> Соединение_с_сервером : host port
  Соединение_с_сервером --> Неверные_данные : Error
  Соединение_с_сервером --> Отправление_запроса : Путь
  Отправление_запроса --> Сервер : Packed request

}

state Сервер {
  [*] --> Получение_запроса
  Получение_запроса --> Получение_файлов_дириктории : Путь
  Получение_файлов_дириктории --> Получение_файлов_дириктории : Следующий путь
  Получение_файлов_дириктории --> Отправление_ответа : Ответ
  Отправление_ответа --> Экран_клиента : Ответ
}


state Экран_клиента {
  Получение_ответа --> Вывод_на_экран
  Вывод_на_экран --> [*]
}
@enduml
